<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weaverprojects.opentinder" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".View.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".View.Windows.LogInActivity"></activity>
        <activity android:name=".View.Windows.HomeActivity"></activity>
        <activity android:name=".View.Windows.ChatsActivity"></activity>
        <activity android:name=".View.Windows.ChatActivity"></activity>
        <activity android:name=".View.Windows.SettingsActivity"></activity>
        <activity android:name=".View.Windows.DiscoveryActivity"></activity>
        <activity android:name=".View.Windows.EditProfileActivity"></activity>
        <activity android:name=".View.Windows.ProfileActivity"></activity>
        <activity android:name=".View.Windows.ViewProfileActivity"></activity>

    </application>

</manifest>
